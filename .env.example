# ============================================================================
# Picture Analyzer — Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values.
# All variables are optional except OPENAI_APIKEY.
#
# Legacy variable names (OPENAI_APIKEY, METADATA_LANGUAGE, etc.) are still
# supported for backward compatibility.  New PA_-prefixed names take
# precedence when both are set.
# ============================================================================

# ── Required ─────────────────────────────────────────────────────────

# OpenAI API key (required for image analysis)
OPENAI_APIKEY=sk-your-key-here

# ── OpenAI Settings ──────────────────────────────────────────────────

# Vision model to use (default: gpt-4o-mini)
# PA_OPENAI__MODEL=gpt-4o-mini

# Max tokens for AI response (default: 4096)
# PA_OPENAI__MAX_TOKENS=4096

# Image detail level: auto, low, high (default: auto)
# PA_OPENAI__DETAIL=auto

# ── Metadata ─────────────────────────────────────────────────────────

# Language for metadata content: en, nl, de, fr, es, it, pt, ja, zh, ru
# Also accepted as legacy name: METADATA_LANGUAGE
# PA_METADATA__LANGUAGE=en

# Write EXIF metadata (default: true)
# PA_METADATA__WRITE_EXIF=true

# Write XMP metadata (default: true)
# PA_METADATA__WRITE_XMP=true

# Write GPS coordinates (default: true)
# PA_METADATA__WRITE_GPS=true

# JPEG output quality 1-100 (default: 95)
# PA_METADATA__JPEG_QUALITY=95

# ── Geocoding ────────────────────────────────────────────────────────

# Geocoding provider: nominatim, google, none (default: nominatim)
# PA_GEO__PROVIDER=nominatim

# GPS confidence threshold 0-100 (default: 80)
# Also accepted as legacy name: GPS_CONFIDENCE_THRESHOLD
# PA_GEO__CONFIDENCE_THRESHOLD=80

# Enable geocoding cache (default: true)
# PA_GEO__CACHE_ENABLED=true

# Cache file path (default: .geocoding_cache.json)
# PA_GEO__CACHE_PATH=.geocoding_cache.json

# User-Agent for Nominatim requests
# PA_GEO__USER_AGENT=picture-analyzer/2.0

# Request timeout in seconds (default: 5)
# PA_GEO__TIMEOUT_SECONDS=5

# Google Maps API key (only needed if provider=google)
# PA_GEO__GOOGLE_API_KEY=

# ── Enhancement ──────────────────────────────────────────────────────

# Enable AI-guided enhancement (default: true)
# PA_ENHANCEMENT__ENABLED=true

# JPEG quality for enhanced images (default: 95)
# PA_ENHANCEMENT__JPEG_QUALITY=95

# Color temperature baseline in Kelvin (default: 6500)
# PA_ENHANCEMENT__COLOR_TEMPERATURE_BASELINE=6500

# ── Slide Restoration ───────────────────────────────────────────────

# Enable slide restoration (default: true)
# PA_SLIDE_RESTORATION__ENABLED=true

# Auto-detect slide profiles (default: true)
# PA_SLIDE_RESTORATION__AUTO_DETECT=true

# Confidence threshold for auto profile selection 0-100 (default: 50)
# PA_SLIDE_RESTORATION__CONFIDENCE_THRESHOLD=50

# Directory for custom YAML profiles (default: none — uses built-in profiles)
# PA_SLIDE_RESTORATION__PROFILES_DIR=./profiles

# ── Output ───────────────────────────────────────────────────────────

# Default output directory
# Also accepted as legacy name: OUTPUT_DIR
# PA_OUTPUT__DIRECTORY=output

# Temp directory for intermediate files (default: tmp)
# PA_OUTPUT__TEMP_DIRECTORY=tmp

# File naming patterns (supports: {stem}, {suffix}, {date}, {counter})
# PA_OUTPUT__NAMING_PATTERN={stem}_analyzed{suffix}
# PA_OUTPUT__ENHANCED_PATTERN={stem}_enhanced{suffix}
# PA_OUTPUT__RESTORED_PATTERN={stem}_restored_{profile}{suffix}

# Thumbnail settings
# PA_OUTPUT__THUMBNAIL_SIZE=150
# PA_OUTPUT__THUMBNAIL_QUALITY=85

# Auto-cleanup temp files (default: true)
# PA_OUTPUT__CLEANUP_TEMP=true

# ── Web UI ───────────────────────────────────────────────────────────

# Host to bind to (default: 127.0.0.1)
# PA_WEB__HOST=127.0.0.1

# Port for description editor (default: 7000)
# PA_WEB__PORT=7000

# Debug mode (default: true)
# PA_WEB__DEBUG=true

# ── Prompt / Analysis ───────────────────────────────────────────────

# Toggle analysis sections
# PA_PROMPT__DETECT_SLIDE_PROFILES=true
# PA_PROMPT__RECOMMEND_ENHANCEMENTS=true
# PA_PROMPT__DETECT_LOCATION=true
# PA_PROMPT__DETECT_PEOPLE=true
# PA_PROMPT__DETECT_ERA=true

# Custom instructions appended to the AI prompt
# PA_PROMPT__CUSTOM_INSTRUCTIONS=

# ── General ──────────────────────────────────────────────────────────

# Batch processing size (default: 5)
# PA_BATCH_SIZE=5

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# PA_LOG_LEVEL=INFO
